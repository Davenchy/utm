{
  "name": "Universal Tabs Manager",
  "short_name": "UTM",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "Simple, clean and powerful universal tabs manager",
  "icons": {
    "16": "/icons/icon.png",
    "48": "/icons/icon.png",
    "128": "/icons/icon.png"
  },
  "chrome_url_overrides": {
    "newtab": "src/extension/newtab.html"
  },
  "permissions": ["tabs", "storage", "activeTab", "scripting"]
}
