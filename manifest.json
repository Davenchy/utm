{
  "name": "Universal Tabs Manager",
  "short_name": "UTM",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "Simple, clean and powerful universal tabs manager",
  "icons": {
    "16": "src/assets/icons/icon.png",
    "48": "src/assets/icons/icon.png",
    "128": "src/assets/icons/icon.png"
  },
  "chrome_url_overrides": {
    "newtab": "src/newtab/index.html"
  },
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "scripting"
  ]
}
